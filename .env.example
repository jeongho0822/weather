# OpenWeatherMap API 설정
# https://openweathermap.org/api 에서 무료 API 키 발급
VITE_WEATHER_API_KEY=YOUR_OPENWEATHERMAP_API_KEY

# API 엔드포인트 (기본값 유지)
VITE_WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# 언어 설정
# 지원 언어: ko, en, es, fr, de, ja, zh_cn 등
VITE_WEATHER_LANGUAGE=ko

# 온도 단위
# metric: 섭씨(°C), imperial: 화씨(°F), standard: 켈빈(K)
VITE_WEATHER_UNIT=metric

# 기본 검색 도시 (선택사항)
# 페이지 로드 시 자동으로 검색할 도시명
VITE_DEFAULT_CITY=Seoul

# API 요청 타임아웃 (밀리초)
# 기본값: 10000ms = 10초
VITE_API_TIMEOUT=10000

# 캐시 지속 시간 (밀리초)
# 기본값: 300000ms = 5분
# 0으로 설정하면 캐시 비활성화
VITE_CACHE_DURATION=300000

# 디버그 모드
# true로 설정하면 콘솔에 상세 로그 출력
VITE_DEBUG_MODE=false
